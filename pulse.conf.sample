PULSE_NEWS_BASE_URL="https://newsapi.org/v2"
PULSE_NEWS_COUNTRY="us"
PULSE_NEWS_CATEGORY="general"
PULSE_NEWS_LANGUAGE="en"
PULSE_NEWS_MAX_ARTICLES="5"

